@import "common";

@mixin tag {
	color: #ccc;
	font-weight: normal;
	font-size: 10pt;
	@include monospace;
}

@mixin newline-tag {
	@include tag;
	white-space: pre;
}

<%
tag_styles = {
	'newline-tag' => %w[div header footer ul ol dl],
	'tag' => %w[p h1 h2 h3 h4 h5 h6 li img span a em strong],
	'' => %w[body code pre],
}

tag_styles.keys.sort.each do |style|
	next unless style.length > 0
	sep = (style == 'newline-tag' ? '\\a' : '')
	tag_styles[style].each do |tag|
%>
<%= tag %>:before { content: "<%= "<#{tag}>#{sep}" %>"; @include <%= style %>; }
<%= tag %>:after { content: "<%= "#{sep}</#{tag}>" %>"; @include <%= style %>; }
<%	end
end %>
