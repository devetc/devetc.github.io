@mixin quine-tag {
	color: #ccc;
}

/* Excluded tags: ['code', 'pre'] */
<% for tag in ['body', 'div', 'p', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6', 'ul', 'ol', 'dl', 'li', 'img', 'span' 'a', 'em', 'strong'] do %>
<%= tag %>:before { content: "<%= "<#{tag}>" %>"; @include quine-tag; }
<%= tag %>:after { content: "<%= "</#{tag}>" %>"; @include quine-tag; }
<% end %>
